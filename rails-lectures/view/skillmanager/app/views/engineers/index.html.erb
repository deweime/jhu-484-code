<h1>Listing engineers</h1>

<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Years of experience</th>
  </tr>

<% @engineers.each do |engineer| %>
  <tr>
    <td><%=h engineer.fname %></td>
    <td><%=h engineer.lname %></td>
    <td><%=h engineer.years_of_experience %></td>
    <td><%= link_to 'Show', engineer %></td>
    <td><%= link_to 'Edit', edit_engineer_path(engineer) %></td>
    <td><%= link_to 'Destroy', engineer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New engineer', new_engineer_path %>