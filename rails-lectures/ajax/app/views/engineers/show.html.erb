<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', engineers_path  %></li>
      <li><%= link_to 'New', new_engineer_path %></li>
      <li class="active"><%= link_to 'Show', engineer_path(@engineer) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
        <p>
          First Name: <%= in_place_editor_field :engineer, 'fname' %>
        </p>
        <p>
          Last Name: <%= in_place_editor_field :engineer, 'lname' %>
        </p>
        <p>
          <b>Years_of_experience:</b>
          <%= @engineer.years_of_experience %>
        </p>
      <%= link_to 'Edit', edit_engineer_path(@engineer) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :object => @engineer) -%>
