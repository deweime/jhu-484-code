<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', engineers_path %></li>
      <li><%= link_to 'New', new_engineer_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Engineers</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
		  <th>Fname</th>
		  <th>Lname</th>
	      <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @engineers.each do |engineer| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= engineer.id %>
          </td>
		  <td>
			<%= link_to engineer.fname, engineer_path(engineer) %>
		  </td>
		  <td>
		     <%= engineer.lname %>
		   <td>
		   <td>
            <%= time_ago_in_words(engineer.created_at) %> ago
          </td>
           
          

          <td class="last">
            <%= link_to 'show', engineer_path(engineer) %> |
            <%= link_to 'edit', edit_engineer_path(engineer) %> |
            <%= link_to 'destroy', engineer_path(engineer), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @engineer  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>