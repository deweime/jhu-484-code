<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', projects_path %></li>
      <li><%= link_to 'New', new_project_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Projects</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Name</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @projects.each do |project| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= project.id %>
          </td>
										<td>
						<%= link_to project.name, project_path(project) %>
					</td>
										<td>
            <%= project.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', project_path(project) %> |
            <%= link_to 'edit', edit_project_path(project) %> |
            <%= link_to 'destroy', project_path(project), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @project  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>